<p>
  <b>Комментатор:</b>
  <%= User.find(comment.user_id).username %>
</p>
<p>
	<b>Комментарий:</b>
	<%= comment.body %>
</p>

<% if user_signed_in? && current_user.id == comment.user_id  %>
<div class="btn">
    <%= link_to 'Destroy Comment', [comment.post, comment],
                 :confirm => 'Are you sure?',
                 :method => :delete %>
</div>

<% end %>
