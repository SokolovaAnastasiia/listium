<!DOCTYPE html>
<html>
  <head>
    <title>Listium</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# stylesheet_link_tag    params["controller"], media: 'screen' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% elsif alert %>
    <p class="alert"><%= alert %></p>
  <% end %>
  <body>
      <div class="top_menu">
      <% if user_signed_in? %>
        <%= link_to 'Account', edit_user_registration_path %> | <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign In', new_user_session_path %> | <%= link_to 'Sign Up', new_user_registration_path %>
      <% end %>
    </div>
      <header>
        <%= image_tag("logo.svg") %>
        <nav>
            <%= link_to "Промо", promo_path %>
            <%= link_to "О нас", about_path %>
            <%= link_to "Блог", posts_path %>

        </nav>
    </header>
        <%= yield %>
        <% if notice %>
            <%= notice %>
        <% end %>
    <footer>
        <div class="school">
            <span>@2021</span>
            <span>HSE ART AND DESIGN SCHOOL</span>
            <span>Дизайн и программирование</span>
        </div>
        <div class="soc-media">
            <%= image_tag("facebook.png") %>
            <%= image_tag("instagram.png") %>
            <%= image_tag("behance.png") %>
        </div>
    </footer>
  </body>
</html>
